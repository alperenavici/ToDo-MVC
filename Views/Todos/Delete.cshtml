@model TodoAPP.Models.Todo

@{
    ViewData["Title"] = "Delete Todo";
}

<main id="todolist">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-12">
            <div class="rounded-1 mt-3">
                
                <div class="card-header text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Task
                    </h4>
                    <a asp-action="Index" class="btn btn-white text-white" title="Back to List">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

                <div class="card-body p-4">
                    <h5 class="mb-4">Are you sure you want to delete this task?</h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Is Complete</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IsComplete)</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Created)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
